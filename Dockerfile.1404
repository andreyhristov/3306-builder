#RUN cd /home/developer && \
#   ./provision_boost.sh && \
RUN mkdir /home/developer/ccache && \
	mkdir /home/developer/boost && \
    chown -R developer.developer /home/developer

ENV CCACHE_DIR /home/developer/ccache

WORKDIR /home/developer

CMD ["sleep", "10000000"]
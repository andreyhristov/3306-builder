FROM ubuntu:14.04
MAINTAINER Andrey Hristov <andrey@php.net>

RUN apt-get update && apt-get install -y \
    wget \
    ccache \
    build-essential \
    libssl-dev \
    libncurses5-dev \
    bison \
    cmake \
    && apt-get clean && \
    rm -rf /var/lib/apt/lists/*


RUN useradd -ms /bin/bash -G root developer

